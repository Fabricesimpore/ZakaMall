# Production Environment Configuration for ZakaMall

# Database - Use production PostgreSQL instance
DATABASE_URL=postgresql://username:password@production-db-host:5432/zakamall_production

# Email Configuration - Production SMTP
EMAIL_SERVICE=smtp
EMAIL_USER=noreply@zakamall.bf
EMAIL_PASS=your_production_email_password
EMAIL_FROM=noreply@zakamall.bf
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=true

# Session Security - Use strong random secret
SESSION_SECRET=your_very_secure_random_session_secret_minimum_32_characters

# Object Storage - Production buckets
DEFAULT_OBJECT_STORAGE_BUCKET_ID=zakamall-production-storage
PRIVATE_OBJECT_DIR=/zakamall-prod/private
PUBLIC_OBJECT_SEARCH_PATHS=/zakamall-prod/public

# SMS Service Configuration for Burkina Faso
SMS_PROVIDER=orange
SMS_API_KEY=your_production_orange_api_key
SMS_API_SECRET=your_production_orange_api_secret
SMS_SENDER_ID=ZakaMall
ORANGE_SMS_ENDPOINT=https://api.orange.com/smsmessaging/v1/outbound/tel%3A%2B226XXXXXXXX/requests
ORANGE_SENDER_NUMBER=+226XXXXXXXX
ORANGE_CALLBACK_URL=https://your-production-domain.com/api/sms/callback

# Payment Services - Production keys
ORANGE_MONEY_API_KEY=your_production_orange_money_key
MOOV_MONEY_API_KEY=your_production_moov_money_key

# Production Environment
NODE_ENV=production

# Security & Performance
CORS_ORIGIN=https://your-production-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOG_LEVEL=info

# Monitoring & Observability
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true
HEALTH_CHECK_ENDPOINT=/health