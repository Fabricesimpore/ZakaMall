# Database
DATABASE_URL=your_postgres_connection_string

# Email Configuration
EMAIL_SERVICE=gmail  # or 'smtp' for custom SMTP
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=noreply@zakamall.bf

# For custom SMTP (alternative to Gmail)
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_SECURE=false

# Replit Auth
REPL_ID=your_repl_id
REPLIT_DOMAINS=your-repl-domain.replit.dev
SESSION_SECRET=your_session_secret

# Object Storage (if using)
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your_bucket_id
PRIVATE_OBJECT_DIR=/your-bucket/private
PUBLIC_OBJECT_SEARCH_PATHS=/your-bucket/public

# SMS Service Configuration  
SMS_PROVIDER=console  # or 'orange', 'twilio', 'textbelt', 'africastalking'
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret  # For Twilio
SMS_SENDER_ID=ZakaMall

# Orange API Configuration (for Burkina Faso)
ORANGE_SMS_ENDPOINT=https://api.orange.com/smsmessaging/v1/outbound/tel%3A%2B226XXXXXXXX/requests
ORANGE_SENDER_NUMBER=your_orange_sender_number
ORANGE_CALLBACK_URL=your_callback_url  # Optional

# Other SMS Providers
TWILIO_PHONE_NUMBER=your_twilio_phone_number  # For Twilio
AFRICASTALKING_USERNAME=your_username  # For Africa's Talking

# Payment Services
ORANGE_MONEY_API_KEY=your_orange_money_key
MOOV_MONEY_API_KEY=your_moov_money_key

# Environment
NODE_ENV=development